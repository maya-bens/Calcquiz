<Window x:Class="Calcquiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calcquiz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock  Grid.Column="0" Grid.Row="0" x:Name="num1" Text="num1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50"/>
            <TextBlock Grid.Column="0" Grid.Row="1" x:Name="num2" Text="num2"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50"/>
            <TextBlock  Grid.Column="1" Grid.Row="0" x:Name="number1" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50"/>
            <TextBlock Grid.Column="1" Grid.Row="1" x:Name="number2" Text=""  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50"/>
            <TextBlock Grid.Row="0" Grid.Column="2" x:Name="resulte" Text=" answer:"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50"/>
            <TextBox x:Name="uranswer" Grid.Column="2" Grid.Row="1" FontSize="36" Margin="40,17"/>
            <TextBlock Grid.Row="1" Grid.Column="2" x:Name="trueresult" Text=" result:"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50" Visibility="Hidden"/>


        </Grid>
        <TextBlock x:Name="round" Text=""  VerticalAlignment="Center"  HorizontalAlignment="Left"  FontSize="50" Width="461" Margin="196,0,0,0"/>

        <TextBlock Grid.Row="0" x:Name="score" Text="score"  VerticalAlignment="Center" HorizontalAlignment="Left"  FontSize="50"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Width="780">
            <RadioButton x:Name="addBtn" Tag="1" Content="sum" Width="80" Height="60" Margin="3" FontSize="13" FontWeight="Bold" Click="RadioButton_Checked"/>
            <RadioButton x:Name="subtractBtn"  Tag="2" Content="sub" Width="80" Height="60" Margin="3" FontSize="13" FontWeight="Bold" Click="RadioButton_Checked"/>
            <RadioButton x:Name="multiplyBtn"  Tag="3" Content="mul" Width="80" Height="60" Margin="3" FontSize="13" FontWeight="Bold" Click="RadioButton_Checked"/>
            <RadioButton x:Name="divideBtn"  Tag="4" Content="div" Width="80" Height="60" Margin="3" FontSize="13" FontWeight="Bold" Click="RadioButton_Checked"/>
            <RadioButton x:Name="Modolobtn"  Tag="5" Content="modolu" Width="91" Height="60" Margin="3" FontSize="13" FontWeight="Bold" Click="RadioButton_Checked"/>
            <RadioButton x:Name="Avgbtn"  Tag="6" Content="avg" Width="80" Height="60" Margin="3" FontSize="13" FontWeight="Bold" Click="RadioButton_Checked"/>
            <RadioButton x:Name="divIntBtn"  Tag="7" Content="divInt" Width="80" Height="60" Margin="3" FontSize="13" FontWeight="Bold" Click="RadioButton_Checked"/>
            <Button x:Name="next" Tag="8" Content="next" Width="80" Height="60" Margin="3" FontSize="13" FontWeight="Bold" Click="MyRandom"/>
            <Button x:Name="sumbit" Content="sumbit" Width="92" Height="60" FontSize="13" FontWeight="Bold" Click="Answercheack"/>


        </StackPanel>

    </Grid>
</Window>
